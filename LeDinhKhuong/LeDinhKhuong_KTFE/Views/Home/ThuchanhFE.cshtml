<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Giỏ hàng của tôi</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: white;
            padding: 20px;
        }

        .container {
            width: 95%;
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            gap: 20px;
            align-items: flex-start; /* Canh các cột theo chiều dọc */
        }

        /*  Cột bên trái: Giỏ hàng & Sản phẩm đã lưu */
        .main-content {
            flex: 3; /* Cột trái chiếm nhiều không gian hơn */
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .shopping-cart, .saved-items {
            background-color: white;
            padding: 20px;
        }

        .cart-header {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            border-bottom: 1px 
        }

            .cart-header h1 {
                margin: 0;
                font-size: 28px;
            }

            .cart-header .deselect-link {
                font-size: 14px;
                color: red;
                text-decoration: none;
            }

                .cart-header .deselect-link:hover {
                    text-decoration: underline;
                }

        .price-label {
            font-size: 14px;
            text-align: right;
            margin-top: -10px;
            margin-bottom: 10px;
        }

        /* Cấu trúc một sản phẩm  */
        .cart-item {
            display: flex;
            gap: 15px;
            padding: 20px 0;
            border-bottom: 1px 
        }

            .cart-item .item-image {
                width: 180px;
                height: 180px;
                object-fit: contain;
            }

        .item-details {
            flex-grow: 1; /* Cho phép phần mô tả chiếm hết không gian còn lại */
        }

            .item-details .item-name {
                font-size: 18px;
                color:navy;
            }

            .item-details .item-stock {
                font-size: 12px;
                color: red;
                margin: 5px 0;
            }

            .item-details .item-options, .item-actions {
                font-size: 14px;
                color: black;
            }

        .item-actions {
            margin-top: 10px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

            .item-actions .quantity {
                display: flex;
                align-items: center;
                border: 1px solid;
                border-radius: 8px;
                box-shadow: 0 1px 2px rgba(0,0,0,0.1);
                background-color: white;
                padding: 4px 10px;
            }

            .item-actions .qty-value {
                margin: 0 10px;
            }

            .item-actions a {
                color: navy;
                text-decoration: none;
            }

                .item-actions a:hover {
                    text-decoration: underline;
                }

        .item-price {
            font-size: 18px;
            font-weight: bold;
            color: red;
            min-width: 80px; /* Đảm bảo giá không bị xô lệch */
            text-align: right;
        }

        .cart-subtotal {
            text-align: right;
            font-size: 18px;
            margin-top: 20px;
        }

        /*  Cột bên phải: Tổng tiền  */
        .summary {
            flex: 1;
            background-color: white;
            padding: 20px;
            height: fit-content;
        }

        .summary-total {
            font-size: 18px;
            margin-bottom: 20px;
        }

        .checkout-btn {
            background-color: yellow;
            border: 1px solid;
            border-radius: 8px;
            width: 100%;
            padding: 12px 0;
            font-size: 14px;
            font-weight: bold;
            cursor: pointer;
            box-shadow: 0 2px 5px 0 rgba(213,217,217,.5);
        }

            .checkout-btn:hover {
                background-color: red;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="main-content">
            <div class="shopping-cart">
                <div class="cart-header">
                    <h1>Shopping Cart</h1>
                    <a href="#" class="deselect-link">Deselect all items</a>
                </div>
                <div class="price-label">Price</div>

                <div class="cart-item" data-price="44.79">
                    <input type="checkbox" checked>
                    <img src="https://neriinstore.com/wp-content/uploads/2022/07/Tui-xach-nu-sang-trong-NE17-14.jpg" alt="Túi" class="item-image" />
                    <div class="item-details">
                        <div class="item-name">Tommy Hilfiger Women's Leather Saddle Shoulder Bag with Removable Crossbody Strap</div>
                        <div class="item-stock">In Stock</div>
                        <div class="item-actions">
                            <div class="quantity">
                                <button class="minus-btn">-</button>

                                <span class="qty-value">1</span>

                                <button class="plus-btn">+</button>
                            </div>
                            <a href="#">Delete</a> |
                            <a href="#">Save for later</a>
                        </div>
                    </div>
                    <div class="item-price">$44.79</div>
                </div>

                <div class="cart-item" data-price="98.00">
                    <input type="checkbox" checked>
                    <img src="data:image/jpeg;base64," alt="Giày" class="item-image" />
                    <div class="item-details">
                        <div class="item-name">Sam Edelman Women's Rosa Pump, Cape Blue, 10</div>
                        <div class="item-stock">In Stock</div>
                        <div class="item-options">
                            <span>Size: 10</span><br>
                            <span>Color: Cape Blue</span>
                        </div>
                        <div class="item-actions">
                            <div class="quantity">
                                <button class="minus-btn">-</button>

                                <span class="qty-value">1</span>

                                <button class="plus-btn">+</button>
                            </div>
                            <a href="#">Delete</a> |
                            <a href="#">Save for later</a>
                        </div>
                    </div>
                    <div class="item-price">$98.00</div>
                </div>

                <div class="cart-item" data-price="23.39">
                    <input type="checkbox" checked>
                    <img src="data:image/jpeg;base64," alt="Áo" class="item-image" />
                    <div class="item-details">
                        <div class="item-name">Newchoice Dressy Casual Tops for Women, Collared V Neck 3/4 Sleeve Blouses Loose Fitting Tunic Tops (Sage Green, XL)</div>
                        <div class="item-stock">In Stock</div>
                        <div class="item-options">
                            <span>Size: X-Large</span><br>
                            <span>Color: Sage Green</span>
                        </div>
                        <div class="item-actions">
                            <div class="quantity">
                                <button class="minus-btn">-</button>

                                <span class="qty-value">1</span>

                                <button class="plus-btn">+</button>
                            </div>
                            <a href="#">Delete</a> |
                            <a href="#">Save for later</a>
                        </div>
                    </div>
                    <div class="item-price">$23.39</div>
                </div>

                <div class="cart-subtotal">
                    Subtotal (<span id="total-items">6</span> items): <span id="total-price" style="font-weight: bold;">$310.96</span>
                </div>
            </div>
            <div class="saved-items">
                <h2>Your Items</h2>
                <p>No items saved for later</p>
            </div>
        </div>

        <div class="summary">
            <div class="summary-total">
                Subtotal (<span id="summary-total-items">6</span> items): <span id="summary-total-price" style="font-weight: bold;">$310.96</span>
            </div>
            <button class="checkout-btn" id="checkout-btn">Proceed to checkout</button>
        </div>
    </div>

    <script>



        /* JAVASCRIPT */
        // Sử dụng querySelectorAll với class chung là .cart-item
        const items = document.querySelectorAll('.cart-item');

        // hiển thị tổng kết
        const totalItemsEl = document.getElementById('total-items');
        const totalPriceEl = document.getElementById('total-price');
        const summaryItemsEl = document.getElementById('summary-total-items');
        const summaryPriceEl = document.getElementById('summary-total-price');

        const checkoutBtn = document.getElementById('checkout-btn');

        // cập nhật tổng tiền và số lượng 
        function updateTotal() {
            let totalItemCount = 0;
            let subtotal = 0;

            items.forEach(item => {
                const price = parseFloat(item.dataset.price);
                const qty = parseInt(item.querySelector('.qty-value').textContent);

                totalItemCount += qty;
                subtotal += price * qty;
            });

            // Cập nhật giá trị lên giao diện
            totalItemsEl.textContent = totalItemCount;
            totalPriceEl.textContent = '$' + subtotal.toFixed(2);
            summaryItemsEl.textContent = totalItemCount;
            summaryPriceEl.textContent = '$' + subtotal.toFixed(2);
        }

        // *** PHẦN THÊM MỚI ĐỂ TĂNG/GIẢM SỐ LƯỢNG 
        items.forEach(item => {
            // Tìm các nút và phần tử hiển thị số lượng trong mỗi item
            const minusBtn = item.querySelector('.minus-btn'); 
            const plusBtn = item.querySelector('.plus-btn');  
            const qtyEl = item.querySelector('.qty-value');

            // Gắn sự kiện cho nút trừ (-)
            if (minusBtn) {
                minusBtn.addEventListener('click', () => {
                    let currentQty = parseInt(qtyEl.textContent);
                    if (currentQty > 1) {
                        currentQty--;
                        qtyEl.textContent = currentQty;
                        updateTotal(); // hàm cập nhật lại tổng tiền
                    }
                });
            }

            // Gắn sự kiện cho nút cộng (+)
            if (plusBtn) {
                plusBtn.addEventListener('click', () => {
                    let currentQty = parseInt(qtyEl.textContent);
                    currentQty++;
                    qtyEl.textContent = currentQty;
                    updateTotal(); // hàm cập nhật lại tổng tiền
                });
            }
        });
 

        // Khi  "Thanh toán"
        checkoutBtn.addEventListener('click', () => {
            alert("Cảm ơn bạn đã mua hàng! Tổng tiền là " + totalPriceEl.textContent);
        });

        // Cập nhật tổng tiền ngay khi trang vừa tải xong
        window.addEventListener('DOMContentLoaded', updateTotal);
    </script>
</body>
</html>